<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/AppDrawerArrowToggle</item>
        <item name="iffabStyle">@style/Widget.FFAB.IndicatableFFAB</item>
        <item name="roundedCornerImageViewStyle">@style/Widget.RoundedCornerImageView</item>
        <item name="iconAttachedCounterViewStyle">@style/Widget.IconAttachedCounterView</item>
        <item name="retweetUserViewStyle">@style/Widget.RetweetUserView</item>
    </style>

    <style name="AppDrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/primary_text_dark</item>
    </style>

    <style name="Theme.AppTheme.TranslucentStatusBar" parent="Theme.AppCompat.Light.NoActionBar" />
</resources>
