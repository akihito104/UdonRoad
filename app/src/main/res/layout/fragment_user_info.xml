<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/user_appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/user_collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimaryDark"
            >

            <RelativeLayout
                android:id="@+id/user_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/user_banner"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="user banner"
                    />

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="6dp"
                    android:contentDescription="@string/desc_icon"
                    android:padding="2dp"
                    android:background="#ffffff"
                    android:layout_marginBottom="6dp"
                    />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    tools:text="user name"
                    android:layout_below="@+id/user_screen_name"
                    android:layout_toEndOf="@+id/user_icon"
                    />

                <TextView
                    android:id="@+id/user_screen_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="\@screenname"
                    android:layout_alignTop="@+id/user_icon"
                    android:layout_toEndOf="@+id/user_icon"
                    />

                <TextView
                    android:id="@+id/user_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_toEndOf="@+id/user_icon"
                    android:textSize="@dimen/tweet_main_size"
                    tools:text="user description"
                    />

                <TextView
                    android:id="@+id/user_tweets_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/user_icon"
                    android:layout_alignStart="@+id/user_icon"
                    android:textSize="@dimen/tweet_main_size"
                    tools:text="tweets"
                    />

                <TextView
                    android:id="@+id/user_follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/user_tweets_count"
                    android:layout_alignStart="@+id/user_tweets_count"
                    android:textSize="@dimen/tweet_main_size"
                    tools:text="followers"
                    />

                <TextView
                    android:id="@+id/user_friends_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/user_follower_count"
                    android:layout_alignStart="@+id/user_follower_count"
                    android:textSize="@dimen/tweet_main_size"
                    tools:text="friends"
                    />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/user_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin"
                />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</layout>