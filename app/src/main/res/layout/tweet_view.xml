<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
    >

    <ImageView
        android:layout_width="@dimen/tweet_user_icon"
        android:layout_height="@dimen/tweet_user_icon"
        android:id="@+id/tl_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/desc_icon"
        android:layout_marginRight="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tl_displayname"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tl_at"
        android:layout_toEndOf="@+id/tl_at"
        tools:text="account"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tl_tweet"
        android:layout_below="@+id/tl_displayname"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"
        android:textSize="@dimen/tweet_main_size"
        tools:text="Tweet"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tl_time"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="CreatedTime"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ScreenName"
        android:id="@+id/tl_account"
        android:textSize="@dimen/tweet_small_fontsize"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/timeline_at"
        android:id="@+id/tl_at"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tl_account"
        android:layout_toEndOf="@+id/tl_account"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tl_rtcount"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_alignTop="@+id/tl_via"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Count"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/tweet_small_fontsize"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/plus_one"
        android:id="@+id/tl_myrt"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_alignTop="@+id/tl_rtcount"
        android:layout_toEndOf="@+id/tl_rtcount"
        android:layout_toRightOf="@+id/tl_rtcount"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/tweet_rt"
        android:id="@+id/tl_rt"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_alignTop="@+id/tl_myrt"
        android:layout_toEndOf="@+id/tl_myrt"
        android:layout_toRightOf="@+id/tl_myrt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tl_favcount"
        android:textSize="@dimen/tweet_small_fontsize"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Count"
        android:layout_alignTop="@+id/tl_rt"
        android:layout_toEndOf="@+id/tl_rt"
        android:layout_toRightOf="@+id/tl_rt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/tweet_small_fontsize"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/plus_one"
        android:id="@+id/tl_myfav"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:layout_alignTop="@+id/tl_favcount"
        android:layout_toEndOf="@+id/tl_favcount"
        android:layout_toRightOf="@+id/tl_favcount"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/tweet_like"
        android:id="@+id/tl_fav"
        android:layout_marginLeft="4dp"
        android:textSize="@dimen/tweet_small_fontsize"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_alignTop="@+id/tl_myfav"
        android:layout_toEndOf="@+id/tl_myfav"
        android:layout_toRightOf="@+id/tl_myfav"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tl_clientname"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_below="@+id/tl_tweet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        tools:text="client name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/tweet_via"
        android:id="@+id/tl_via"
        android:layout_alignTop="@+id/tl_clientname"
        android:layout_toLeftOf="@+id/tl_clientname"
        android:layout_toStartOf="@+id/tl_clientname"
        android:textSize="@dimen/tweet_small_fontsize"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/tweet_rtbyat"
        android:id="@+id/tl_rtby"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_below="@+id/tl_rtcount"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tl_rtuser"
        android:textSize="@dimen/tweet_small_fontsize"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="Retweeting user"
        android:layout_below="@+id/tl_rt"
        android:layout_toEndOf="@+id/tl_rtby"
        />

</RelativeLayout>
</layout>