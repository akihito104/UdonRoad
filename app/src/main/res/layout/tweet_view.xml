<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tl_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="account"
        android:id="@+id/tl_displayname"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tl_at"
        android:layout_toEndOf="@+id/tl_at"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweet"
        android:id="@+id/tl_tweet"
        android:layout_below="@+id/tl_displayname"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CreatedTime"
        android:id="@+id/tl_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScreenName"
        android:id="@+id/tl_account"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/timeline_at"
        android:id="@+id/tl_at"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tl_account"
        android:layout_toEndOf="@+id/tl_account"
        android:textSize="10sp"/>
</RelativeLayout>