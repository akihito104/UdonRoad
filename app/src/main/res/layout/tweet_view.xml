<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/tl_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tl_displayname"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tl_tweet"
        android:layout_below="@+id/tl_displayname"
        android:layout_toRightOf="@+id/tl_icon"
        android:layout_toEndOf="@+id/tl_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tl_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tl_account"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tl_time"
        android:layout_toStartOf="@+id/tl_time"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="31dp"/>
</RelativeLayout>