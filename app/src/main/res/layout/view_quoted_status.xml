<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       tools:parentTag="RelativeLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
    >
    <com.freshdigitable.udonroad.RoundedCornerImageView
        android:id="@+id/q_icon"
        android:layout_width="@dimen/small_user_icon"
        android:layout_height="@dimen/small_user_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/desc_icon"
        android:layout_marginRight="@dimen/grid_margin"
        app:maskerShape="@drawable/s_rounded_mask_small"
        />

    <TextView
        android:id="@+id/q_tweet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q_icon"
        android:textSize="@dimen/tweet_main_size"
        tools:text="Tweet"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/q_icon"
            android:layout_toRightOf="@id/q_icon"
            android:layout_toEndOf="@id/q_icon"
            android:layout_alignParentEnd="true"
            >
            <com.freshdigitable.udonroad.CombinedScreenNameTextView
                android:id="@+id/q_names"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/grid_margin"
                android:textSize="@dimen/tweet_small_fontsize"
                android:lines="1"
                android:ellipsize="end"
                tools:text="ScreenName @name"
                />

            <TextView
                android:id="@+id/q_create_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="end"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/tweet_small_fontsize"
                android:lines="1"
                tools:text="CreatedTime"
                />
        </LinearLayout>

    <com.freshdigitable.udonroad.IconAttachedTextView
        android:id="@+id/q_rtcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/grid_margin_detail"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_alignTop="@+id/q_via"
        android:layout_alignBottom="@+id/q_via"
        android:visibility="gone"
        app:icon="@drawable/ic_retweet"
        tools:visibility="visible"
        tools:text="Count"
        />

    <com.freshdigitable.udonroad.IconAttachedTextView
        android:id="@+id/q_favcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/grid_margin"
        android:layout_alignTop="@+id/q_rtcount"
        android:layout_alignBottom="@+id/q_rtcount"
        android:layout_toEndOf="@+id/q_rtcount"
        android:layout_toRightOf="@+id/q_rtcount"
        android:textSize="@dimen/tweet_small_fontsize"
        android:visibility="gone"
        app:icon="@drawable/ic_like"
        tools:visibility="visible"
        tools:text="Count"
        />

    <TextView
        android:id="@+id/q_via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q_image_group"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/q_favcount"
        android:gravity="end"
        android:textSize="@dimen/tweet_small_fontsize"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:lines="1"
        android:ellipsize="end"
        tools:text="via clientName"
        />

    <com.freshdigitable.udonroad.media.ThumbnailContainer
        android:id="@+id/q_image_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tweet_user_icon"
        android:layout_marginTop="@dimen/grid_margin"
        android:layout_marginBottom="@dimen/grid_margin"
        android:layout_below="@id/q_tweet"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        app:thumbCount="4"
        />
</merge>