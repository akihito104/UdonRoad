<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary">

    <ImageView
        android:id="@+id/tw_icon"
        android:layout_width="@dimen/tweet_user_icon"
        android:layout_height="@dimen/tweet_user_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tw_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tw_icon"
        android:layout_toEndOf="@+id/tw_icon"
        android:textSize="@dimen/tweet_small_fontsize"
        android:textStyle="bold"
        android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/tw_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeline_at"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tw_name"
        android:layout_toEndOf="@+id/tw_name"
        android:textSize="@dimen/tweet_small_fontsize"/>

    <TextView
        android:id="@+id/tw_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="account"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tw_at"
        android:layout_toEndOf="@+id/tw_at"
        android:textSize="@dimen/tweet_small_fontsize"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw_text"
        android:layout_below="@+id/tw_name"
        android:layout_toRightOf="@+id/tw_icon"
        android:layout_toEndOf="@+id/tw_icon"
        android:layout_toLeftOf="@+id/tw_send"
        android:layout_toStartOf="@+id/tw_send"
        android:inputType="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="140"
        android:id="@+id/tw_char_count"
        android:layout_alignTop="@+id/tw_text"
        android:layout_alignLeft="@+id/tw_send"
        android:layout_alignStart="@+id/tw_send"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        android:id="@+id/tw_send"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/tw_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="via"
        android:layout_toLeftOf="@+id/tw_appname"
        android:layout_toStartOf="@+id/tw_appname"
        android:layout_below="@+id/tw_text"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_marginRight="4dp"/>

    <TextView
        android:id="@+id/tw_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/tweet_small_fontsize"
        android:layout_below="@+id/tw_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>